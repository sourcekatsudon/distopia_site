<?xml version="1.0" encoding="UTF-8"?>
<svg width="1024" height="1024" viewBox="0 0 1024 1024" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- 火星の基本色 - 赤茶色 -->
  <circle cx="512" cy="512" r="512" fill="#CD5C5C"/>
  
  <!-- より暗い赤茶色の地形 -->
  <circle cx="512" cy="512" r="480" fill="#B22222"/>
  
  <!-- クレーター -->
  <circle cx="350" cy="350" r="80" fill="#8B0000" fill-opacity="0.7"/>
  <circle cx="650" cy="450" r="100" fill="#8B0000" fill-opacity="0.7"/>
  <circle cx="450" cy="650" r="60" fill="#8B0000" fill-opacity="0.7"/>
  <circle cx="250" cy="550" r="70" fill="#8B0000" fill-opacity="0.7"/>
  <circle cx="750" cy="250" r="50" fill="#8B0000" fill-opacity="0.7"/>
  
  <!-- クレーターの縁 -->
  <circle cx="350" cy="350" r="85" stroke="#A52A2A" stroke-width="5" fill="none"/>
  <circle cx="650" cy="450" r="105" stroke="#A52A2A" stroke-width="5" fill="none"/>
  <circle cx="450" cy="650" r="65" stroke="#A52A2A" stroke-width="5" fill="none"/>
  <circle cx="250" cy="550" r="75" stroke="#A52A2A" stroke-width="5" fill="none"/>
  <circle cx="750" cy="250" r="55" stroke="#A52A2A" stroke-width="5" fill="none"/>
  
  <!-- 火星の特徴的な峡谷 - マリネリス峡谷のイメージ -->
  <path d="M200 512 Q300 480 400 500 Q500 520 600 500 Q700 480 800 500" 
        stroke="#8B0000" stroke-width="30" fill="none" stroke-linecap="round"/>
  
  <!-- 極冠 - 北極と南極の氷 -->
  <circle cx="512" cy="100" r="80" fill="white" fill-opacity="0.8"/>
  <circle cx="512" cy="924" r="60" fill="white" fill-opacity="0.8"/>
  
  <!-- ダスト（砂嵐）の表現 -->
  <ellipse cx="300" cy="700" rx="100" ry="60" fill="#CD853F" fill-opacity="0.3" transform="rotate(15 300 700)"/>
  <ellipse cx="700" cy="300" rx="120" ry="70" fill="#CD853F" fill-opacity="0.3" transform="rotate(-20 700 300)"/>
</svg>
